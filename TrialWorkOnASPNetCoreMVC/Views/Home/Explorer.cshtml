@model TrialWorkOnASPNetCoreMVC.Models.DirectoryData

@{
    ViewData["Title"] = "Explorer";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <link href="~/Content/StyleSheet.css" rel="stylesheet" />
</head>

<body>
    <div>
        <table>

            <th>Название</th>
            <th>Директория</th>
            <th>Размер</th>

            @for (int i = 0; i < Model.FolderNames.Length; i++)
            {
                <tr>
                    <td>
                        <p>@Model.DirName</p>
                    </td>

                    <td>
                        <p><a href="/Home/Explorer/@Model.FolderNames[i]"> @Model.FolderNames[i]</a></p>
                    </td>

                    <td>
                        <p>@Model.FolderSizes[i]</p>
                    </td>
                </tr>        
            }

            @for (int i = 0; i < Model.FileNames.Length; i++)
            {         
                <tr>
                    <td>
                        <p></p>
                    </td>
                    <td>
                        <p>@Model.FileNames[i]</p>
                    </td>
                    <td>
                        <p>@Model.FileSizes[i]</p>
                    </td>
                </tr>
            }

        </table>

    </div>

</body>
</html>

